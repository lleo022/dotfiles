{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "height": 30,
  "margin": "0 0 0 0",
  "spacing": 0,
  "modules-left": [
    "custom/arch", 
    "hyprland/workspaces",
    "custom/nowplaying"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "network",
    "bluetooth",
    "group/audio",
    "group/brightness",
    "battery",
    "custom/notification",
    "custom/power"
  ],

  // --- Groups ---

  "group/brightness": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "children-class": "brightness",
      "transition-left-to-right": true  
    },
    "modules": [
      "backlight",
      "backlight/slider"
    ]
  },

  "group/audio": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "children-class": "audio",
      "transition-left-to-right": true  
    },
    "modules": [
      "pulseaudio",
      "pulseaudio/slider"
    ]
  },

  // --- Modules ---
  
  "custom/nowplaying": {
    "exec": "~/.config/waybar/scripts/now-playing.sh",
    "format": "󰎆 {text}",
    "return-type": "json",
    "interval": 2,
    "escape": true,
    "hide-empty-text": true,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "tooltip": true
  },

  "custom/arch": {
    "format": "󰣇", 
    "on-click": "kitty",
    "tooltip": false
  },

  "hyprland/workspaces": {
    "format": "{id}",
    "on-click": "activate"
  },

  "clock": {
    "interval": 60,
    "format": "󰥔 {:%I:%M %p}", 
    "format-alt": "󰃭 {:%a, %b %d}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode"          : "month",
      "mode-mon-col"  : 3,
      "on-scroll"     : 1,
      "format": {
        "months":     "<span color='#ffead3'><b>{}</b></span>",
        "days":       "<span color='#ecc6d9'><b>{}</b></span>",
        "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
        "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },

  "custom/menu": { 
    "format": "󰀻", 
    "tooltip": false 
  },

  "network": {
    "format-wifi": "󰖩 {signalStrength}%",
    "format-ethernet": "󰈀",
    "format-disconnected": "󰖪",
    "tooltip-format": "{essid}\n{ipaddr}/{cidr}",
    "on-click": "kitty -e nmtui",
    "interval": 5
  },

  "bluetooth": {
    "format": "󰂯",
    "format-off": "󰂲",
    "format-disabled": "󰂲",
    "format-connected": "󰂱 {num_connections}",
    "on-click": "blueman-manager",
    "interval": 30
  },

  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "󰟁",
    "format-icons": {
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "scroll-step": 5
  },

  "pulseaudio/slider": { 
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}",
    "format-icons": ["󰃞", "󰃟", "󰃠"],
    "scroll-step": 5
  },

  "backlight/slider": { 
    "min": 0,
    "max": 100,
    "device": "intel_backlight", 
    "orientation": "horizontal" 
  },

  "battery": {
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-icons": ["󰂃", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "󰂚",
      "none": "󰂛",
      "dnd-notification": "󰂛",
      "dnd-none": "󰂛",
      "inhibited-notification": "󰂛",
      "inhibited-none": "󰂛"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "custom/power": {
    "format": "󰐥", 
    "on-click": "wlogout",
    "tooltip": false
  }

}